@using DTO.AdminCommentDtos
@model List<GetCommentByBlogIdAdminDto>
@{
	ViewData["Title"] = "GetBlogComments";
	Layout = "~/Views/UIAdmin/Index.cshtml";
}
@foreach (var item in Model)
{
	<div class="col-lg-6">
		<div class="card card-body">
			<h4 class="card-title">@item.name</h4>
			<h4 class="card-title">@item.email</h4>
			<p class="card-text">
				@item.blogComment
			</p>
			<a href="#" class="btn btn-primary waves-effect waves-light">Yorum</a>
		</div>
	</div>
}


