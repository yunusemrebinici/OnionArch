@model UpdateLocationAdminDto
@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Views/UIAdmin/Index.cshtml";
}

<div class="card">
	<div class="card-body">
		<p class="card-subtitle mb-4">Lokasyon Güncelleme Sayfası</p>
		<form method="post">
			<input type="hidden" asp-for="LocationID" />

			<div class="form-group">
				<label for="exampleInputEmail1">Başlık</label>
				<input type="text" class="form-control" asp-for="Name">
			</div>
			<br />
			<button class="btn btn-primary">Güncelle</button>

		</form>

	</div>
</div>

