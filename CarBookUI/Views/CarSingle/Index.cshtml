@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/UILayoutController/Index.cshtml";
}

<section class="ftco-section ftco-car-details">
	<div class="container">
		@await Component.InvokeAsync("_GetCarDetailComponentPartial", new { id = ViewBag.Id })
		<div class="row">
			<div class="col-md-12 pills">
				<div class="bd-example bd-example-tabs">
					<div class="d-flex justify-content-center">
						<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">

							<li class="nav-item">
								<a class="nav-link active" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-expanded="true">Özellikler</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" id="pills-manufacturer-tab" data-toggle="pill" href="#pills-manufacturer" role="tab" aria-controls="pills-manufacturer" aria-expanded="true">Açıklama</a>
							</li>
							
						</ul>
					</div>

					<div class="tab-content" id="pills-tabContent">

						@await Component.InvokeAsync("_CarFeatureByCarIdComponentPartial", new { id = ViewBag.Id })

						@await Component.InvokeAsync("_CarSingleDescriptionComponentPartial", new { id = ViewBag.Id })

						<div class="tab-pane fade" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab">
							<div class="row">
								
							
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

