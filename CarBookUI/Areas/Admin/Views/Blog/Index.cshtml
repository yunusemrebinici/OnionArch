@model List<ResultBlogAdminDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UIAdmin/Index.cshtml";
}

<style>
    .small-text {
        font-size: 0.9rem;
    }

    .small-header th {
        font-size: 0.95rem;
    }

    .small-btn {
        font-size: 0.85rem;
        padding: 0.25rem 0.5rem;
    }
</style>

<div>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title small-text">Blog Verileri</h4>

            <div class="table-responsive">
                <table class="table table-striped mb-0 small-text">

                    <thead class="small-header">
                        <tr>
                            <th>#</th>
                            <th>Görsel</th>
                            <th>Yazar</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Tarih</th>
                            <th>Detaylar</th>
                            <th>Sil</th>
                            <th>Yorumlar</th> 
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BlogID</td>
                                <td><img src="@item.CoverImage" style="height:60px;width:60px;" /></td>
                                <td>@item.AuthorName</td>
                                <td>@item.Title</td>
                                @if (item.Description != null && item.Description.Length > 50)
                                {
                                    <td>@item.Description.Substring(0, 50) ..</td>
                                }
                                else
                                {
                                    <td>@item.Description</td>
                                }
                                <td>@item.Date.ToString("dd-MMM-yyyy")</td>
                                <td><a href="/Admin/Blog/DetailBlog/@item.BlogID" class="btn btn-success small-btn">Blog Devamı</a></td>
                                <td><a href="/Admin/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger small-btn">Kaldır</a></td>
                                <td><a href="/Admin/Comment/GetBlogComments/@item.BlogID" class="btn btn-outline-primary small-btn">Yorumlar</a></td> 
                            </tr>
                        }

                    </tbody>
                </table>
                <div class="mt-2">
                    <a href="/Admin/Blog/CreateBlog/" class="btn btn-primary small-btn">Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>