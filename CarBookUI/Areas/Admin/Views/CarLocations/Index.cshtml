@model List<ResultCarLocationsAdminDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UIAdmin/Index.cshtml";
}


<form method="post" asp-area="Admin" asp-controller="CarFeature">
	@for (int i = 0; i < Model.Count; i++)
	{
		<div class="form-check">
			<input type="hidden" asp-for="@Model[i].LocationID" />
			<input type="hidden" asp-for="@Model[i].CarID" />
			<input type="hidden" asp-for="@Model[i].RentAcarID" />
			<input type="checkbox" asp-for="@Model[i].Available" class="form-check-input" />
			<label class="form-check-label" for="@Model[i].Available">@Model[i].LocationName</label>

		</div>
	}
	<button style="btn btn-success">Güncelle</button>
</form>
