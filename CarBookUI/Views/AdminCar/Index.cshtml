@model List<ResultCarListWithBrandAdminDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/UIAdmin/Index.cshtml";
}

<div>
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Striped rows</h4>

			<div class="table-responsive">
				<table class="table table-striped mb-0">

					<thead>
						<tr>
							<th>#</th>
							<th>Model</th>
							<th>Marka</th>
							<th>Fiyat</th>
							<th>Güncelle</th>
							<th>Sil</th>
						
						</tr>
					</thead>
					<tbody>

						@foreach (var item in Model)
						{
							<tr>
								<th scope="row">@item.carID</th>
								<td>@item.model</td>
								<td>@item.name</td>
								<td>@item.carPricing</td>
								<td><a href="" class="btn btn-success">Güncelle</a></td>
								<td><a href="" class="btn btn-danger">Sil</a></td>
								
							</tr>
						}

					</tbody>
				</table>
				<td>
					<a href="/AdminCar/CreateCar/" class="btn btn-primary">Ekle</a>
				</td>
			</div> 
		</div>	
	</div>

</div>

