@model List<ResultCarFeatureDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/UIAdmin/Index.cshtml";
}
<form method="post" asp-area="Admin" asp-controller="CarFeature">
	@for (int i = 0; i < Model.Count; i++)
	{
		<div class="form-check">
			<input type="hidden" asp-for="@Model[i].featureName" />
			<input type="hidden" asp-for="@Model[i].featureID" />
			<input type="hidden" asp-for="@Model[i].carID" />
			<input type="checkbox" asp-for="@Model[i].available" class="form-check-input" />
			<label class="form-check-label" for="@Model[i].available">@Model[i].featureName</label>

		</div>
	}
	<button style="btn btn-success">Güncelle</button>
</form>