
@model CreateCarDto
@{
	ViewData["Title"] = "CreateCar";
	Layout = "~/Views/UIAdmin/Index.cshtml";
}

<div class="card">
	<div class="card-body">	
		<p class="card-subtitle mb-4">Araba Ekleme Sayfası</p>
		<form>

			<div class="form-group">
				<label for="exampleInputEmail1">Model</label>
				<input type="text" class="form-control"  asp-for="model">	
			</div>
			<br />
			<div class="form-group">
				<label for="exampleInputEmail1">Marka</label>
				@Html.DropDownListFor(x=>x.brandID,(List<SelectListItem>)ViewBag.Brand,new{@class="form-control"})
			</div>
			<br />
			<div class="form-group">
				<label for="exampleInputEmail1">Görsel</label>
				<input type="text" class="form-control" asp-for="coverImageUrl">
			</div>
			<br />
			<div class="form-group">
				<label for="exampleInputEmail1">Fiyat</label>
				<input type="number" class="form-control" asp-for="carPricing">
			</div>
			
			<button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
		</form>

	</div> 
</div>

