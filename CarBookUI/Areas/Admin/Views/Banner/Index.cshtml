@model List<ResultBannerAdminDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/UIAdmin/Index.cshtml";
}

<div>
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Sayfa Tasarımı için lütfen 1 tane veri giriniz.</h4>

			<div class="table-responsive">
				<table class="table table-striped mb-0">

					<thead>
						<tr>
							<th>#</th>
							<th>Başlık</th>
							<th>Açıklama</th>
							<th>Video Başlığı</th>
							<th>VideoUrl</th>
							<th>Sil</th>
							<th>Güncelle</th>

						</tr>
					</thead>
					<tbody>

						@foreach (var item in Model)
						{

							<tr>

								<td>@item.BannerID</td>
								<td>@item.Title</td>
								<td>@item.Description</td>
								<td>@item.VideoDescription</td>
								<td>@item.VideoUrl</td>
								<td><a href="/Admin/Banner/DeleteBanner/@item.BannerID" class="btn btn-danger">Sil</a></td>
								<td><a href="/Admin/Banner/UpdateBanner/@item.BannerID" class="btn btn-success">Güncelle</a></td>

							</tr>
						}

					</tbody>
				</table>
				<td>
					<a href="/Admin/Banner/CreateBanner/" class="btn btn-primary">Ekle</a>
				</td>
			</div>
		</div>
	</div>

</div>

