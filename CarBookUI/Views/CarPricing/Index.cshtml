@model List<ResultPivotedCarPricingsWithDetailsDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/UILayoutController/Index.cshtml";
}

<section class="ftco-section ftco-cart">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="car-list">
					<table class="table">
						<thead class="thead-primary">
							<tr class="text-center">
								<th>&nbsp;</th>
								<th>&nbsp;</th>
								<th class="bg-primary heading">Günlük</th>
								<th class="bg-dark heading">Haftalık</th>
								<th class="bg-black heading">Aylık</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr class="">
									<td class="car-image"><div class="img" style="background-image:url(@item.coverImage);"></div></td>
									<td class="product-name">
										<h3>@item.brand</h3>
										<p class="mb-0 rated">
											<span>Model:@item.model</span>
										</p>
									</td>>

									<td class="price">
										<p class="btn-custom"><a href="#">Kirala</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">₺</small> @item.dayAmount</span>
												<span class="per">/Günlük</span>
											</h3>
											<span class="subheading">100km/6.5 Lt Yakıt Tüketimi</span>
										</div>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Rent a car</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">₺</small> @item.weekAmount</span>
												<span class="per">/Haftalık</span>
											</h3>
											<span class="subheading">100km/6.5 Lt Yakıt Tüketimi</span>
										</div>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Rent a car</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">₺</small> @item.monthAmount</span>
												<span class="per">/Aylık</span>
											</h3>
											<span class="subheading">100km/6.5 Lt Yakıt Tüketimi</span>
										</div>
									</td>
								</tr>
							}





						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</section>

